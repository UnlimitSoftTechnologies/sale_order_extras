<odoo>
    <record id="view_order_form_inherit_profit_margin" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.profit.margin</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" widget="percentage" optional="show" position="before">
                <field name="profit_margin"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" optional="show" position="before">
                <field name="base_price"/>
            </xpath>
        </field>
    </record>
</odoo>
